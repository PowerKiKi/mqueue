<h2><?php echo $this->translate('Movies list'); ?></h2>
<?php echo $this->formFilter; ?>
<table>
<tr>
	<th><?php echo $this->sort($this->translate('Rating'), 'rating', $this->sort, $this->sortOrder); ?></th>
	<th><?php echo $this->sort($this->translate('Title'), 'title', $this->sort, $this->sortOrder); ?></th>
</tr>
<?php if ($this->paginator->getTotalItemCount() == 0): ?>
	<tr><td colspan="2">
	<?php echo $this->translate('There is no movie to show.'); ?>
	</td></tr>
<?php else: ?>
	<?php foreach ($this->paginator as $entry): ?>
		<tr>
			<td class="rating"><?php echo $this->statusLinks($entry->getStatus($this->idUser))?></td>
			<td class="movie"><a href="<?php echo $this->url(array('action' => 'view', 'idMovie' => $entry->id)); ?>"><?php echo $this->escape($entry->getTitle()) ?></a></td>
		</tr>
	<?php endforeach ?>
<?php endif; ?>
</table>
<?php echo $this->paginator; ?>


<?php if ($this->paginator->getTotalItemCount() != 0): ?>
	<div class="tips"><?php echo $this->statusHelp(); ?></div>
<?php else: ?>
	<div class="tips">
	<?php 
		echo $this->translate('See the %s to learn how to add movies directly from www.imdb.com in a single click !', array(
		'<a href="' . $this->url(array('controller' => 'faq'), null, true). '">' . $this->translate('FAQ') . '</a>'
		)); 
	?>
	</div>
<?php endif; ?>